{
  "name": "LLVM RISC Compiler",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "devcontainers/features/llvm": {
      "version": "15"
    },
    "devcontainers/features/cmake": {},
    "devcontainers/features/ninja": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  },

  "postCreateCommand": "mkdir -p build && cd build && cmake -G Ninja ../llvm && ninja -j$(nproc)",
  "remoteUser": "vscode"
}
